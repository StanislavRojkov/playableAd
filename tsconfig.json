{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "lib": [ "es6", "dom" ],
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": false,
    "types": [
      "webpack-env",
      "node"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "plugins"
  ]
}